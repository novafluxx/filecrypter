{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "FileCrypter",
  "version": "0.1.18",
  "identifier": "com.novafluxx.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "FileCrypter",
        "width": 700,
        "height": 650,
        "resizable": false,
        "fullscreen": false,
        "backgroundColor": "#1e1e1e"
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self'; connect-src 'self' ipc: tauri:; img-src 'self' data:; object-src 'none'; base-uri 'self'; frame-ancestors 'none';"
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": [
      "app",
      "dmg",
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU0RjM1QzcyNjBCMTczN0IKUldSN2M3RmdjbHp6VklUY2hqazF4Ri8xaU5YM1loZS82ZjVYWGNQK0l4MHgzMDl6eGRNL1JTUXoK",
      "endpoints": [
        "https://github.com/novafluxx/filecrypter/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
